<% if @article.errors.any?%>
<% @article.errors.full_messages.each do |msg| %>
<ul>
<li><%= msg%></li>
</ul>
<%end%>
<%end%>
<%= form_for @article do |f| %>
    <p>
        <%= f.label :Title %><br>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :Description %><br>
        <%= f.text_area :description %>
    </p>
    <p>
        <%= f.submit%>
        </p>
<% end %>
<%= link_to "Back to article listing",articles_path%>